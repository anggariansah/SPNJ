<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.angga.spnjl2.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="-40dp"
        android:background="@drawable/lingblue"
        android:id="@+id/rel1">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-80dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_user"
            android:padding="10dp"
            android:background="@drawable/photo"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Angga Riansah"
            android:textColor="#000"
            android:id="@+id/name"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textSize="23dp"
            android:id="@+id/detail"
            android:layout_below="@+id/name"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/em"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/detail"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/textbox1"
            android:editable="false"
            android:padding="10dp"
            android:text="Email " />

        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/detail"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/textbox1"
            android:enabled="true"
            android:padding="10dp"
            android:text="anggariansah@gmail.com " />

        <EditText
            android:id="@+id/pas"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/em"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/textbox1"
            android:editable="false"
            android:padding="10dp"
            android:text="Password" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/pass"
            android:text="*********"
            android:padding="10dp"
            android:background="@drawable/textbox1"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/email"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/ph"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/pas"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/textbox1"
            android:editable="false"
            android:padding="10dp"
            android:text="Phone" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/phone"
            android:text="085720978134"
            android:padding="10dp"
            android:background="@drawable/textbox1"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/pass"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>
</RelativeLayout>
